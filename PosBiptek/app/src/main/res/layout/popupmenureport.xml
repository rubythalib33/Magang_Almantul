<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="676dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/backgroundmenu"
        android:orientation="vertical"
        design:layout_constraintEnd_toEndOf="parent"
        design:layout_constraintHorizontal_bias="0.0"
        design:layout_constraintStart_toStartOf="parent"
        design:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/Popmenutambah"
            android:layout_width="270dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/background_light"
            design:layout_constraintEnd_toEndOf="parent"
            design:layout_constraintHorizontal_bias="0.496"
            design:layout_constraintStart_toStartOf="parent"
            design:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/money"
                design:layout_constraintEnd_toStartOf="@+id/button10"
                design:layout_constraintHorizontal_chainStyle="spread_inside"
                design:layout_constraintStart_toStartOf="parent"
                design:layout_constraintTop_toBottomOf="@+id/textView6" />

            <Button
                android:id="@+id/button10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/pembelian"
                design:layout_constraintEnd_toStartOf="@+id/button13"
                design:layout_constraintStart_toEndOf="@+id/button7"
                design:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button13"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/penjualan"
                design:layout_constraintEnd_toEndOf="parent"
                design:layout_constraintStart_toEndOf="@+id/button10"
                design:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="13dp"
                android:text="Report"
                android:textSize="18sp"
                android:textStyle="bold"
                design:layout_constraintBottom_toTopOf="@+id/button7"
                design:layout_constraintStart_toStartOf="parent"
                design:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button15"
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:layout_marginStart="155dp"
                android:background="@android:color/background_light"
                android:text="X"
                android:textSize="18sp"
                android:textStyle="bold"
                design:layout_constraintBottom_toTopOf="@+id/button13"
                design:layout_constraintEnd_toEndOf="parent"
                design:layout_constraintHorizontal_bias="1.0"
                design:layout_constraintStart_toEndOf="@+id/textView6"
                design:layout_constraintTop_toTopOf="parent"
                design:layout_constraintVertical_bias="0.368" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="35dp"
                android:text="Keuangan"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                design:layout_constraintEnd_toStartOf="@+id/textView12"
                design:layout_constraintStart_toStartOf="parent"
                design:layout_constraintTop_toBottomOf="@+id/button7" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="32dp"
                android:text="Pembelian"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                design:layout_constraintEnd_toStartOf="@+id/textView13"
                design:layout_constraintHorizontal_bias="0.641"
                design:layout_constraintStart_toEndOf="@+id/textView11"
                design:layout_constraintTop_toBottomOf="@+id/button10" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="Penjualan"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                design:layout_constraintEnd_toEndOf="parent"
                design:layout_constraintTop_toBottomOf="@+id/button13" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        design:layout_constraintBottom_toBottomOf="parent"
        design:layout_constraintStart_toStartOf="parent"
        design:menu="@menu/menu_navigation" />
</android.support.constraint.ConstraintLayout>