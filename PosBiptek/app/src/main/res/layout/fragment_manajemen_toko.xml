<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="@drawable/backgroun_tansparant"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentManajemenToko">

    <android.support.constraint.ConstraintLayout
        android:layout_width="280dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/fragmentDataToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Toko"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/fragmentNamaToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:hint="Nama Toko"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:ems="12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentDataToko"
            />

        <EditText
            android:id="@+id/fragmentAlamatToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:hint="Alamat Toko"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:ems="12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentNamaToko"
            />

        <EditText
            android:id="@+id/fragmentNoTelpToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:hint="No. telepon Toko"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:ems="12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentAlamatToko"
            />

        <Button
            android:id="@+id/fragmentTokoSimpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/simpan"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/fragmentTokoBatal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/batal"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/fragmentTokoSimpan"
            />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>