<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/penjualanNamaProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:text="Nama Produk"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/penjualanHargaProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:text="Harga Produk"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/penjualanNamaProduk"
        />

    <TextView
        android:id="@+id/penjualanJumlahProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:text="Jumlah:"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/penjualanHargaProduk"
        />

    <Button
        android:id="@+id/penjualanKurangProduk"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/decrease"
        app:layout_constraintLeft_toRightOf="@id/penjualanJumlahProduk"
        app:layout_constraintTop_toBottomOf="@id/penjualanNamaProduk"
        />

    <EditText
        android:id="@+id/penjualanJumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:layout_marginTop="25dp"
        android:ems="3"
        android:gravity="center"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/penjualanKurangProduk"
        app:layout_constraintTop_toBottomOf="@+id/penjualanNamaProduk"
        />

    <Button
        android:id="@+id/penjualanTambahProduk"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/increase"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/penjualanNamaProduk"
        app:layout_constraintLeft_toRightOf="@+id/penjualanJumlah"
        />

    <TextView
        android:id="@+id/penjualanSatuanProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="satuan"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/penjualanTambahProduk"
        app:layout_constraintTop_toBottomOf="@+id/penjualanHargaProduk"/>

    <Button
        android:id="@+id/penjualanCancelProduk"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/trash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/penjualanSubTotalItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="0"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>